---
// src/components/AseguradorasV2.astro
const compañias = [
  { name: "HDI Seguros", logo: "/aseguradoras/hdi.png" },
  { name: "Sura", logo: "/aseguradoras/sura.svg" },
  { name: "Reale Seguros", logo: "/aseguradoras/reale.png" },
  { name: "Mapfre", logo: "/aseguradoras/mapfre.svg" },
  { name: "BCI Seguros", logo: "/aseguradoras/bci-seguros.svg" },
  { name: "Consorcio", logo: "/aseguradoras/consorcio.svg" },
  { name: "Chubb", logo: "/aseguradoras/chubb.png" },
  { name: "BICEVIDA", logo: "/aseguradoras/bice-vida.svg" },
  { name: "AuguStar Seguros", logo: "/aseguradoras/augustar.png" },
  { name: "FID Seguros", logo: "/aseguradoras/fid.svg" },
  { name: "Renta Nacional", logo: "/aseguradoras/renta-nacional.svg" },
  { name: "Southbridge", logo: "/aseguradoras/southbridge.png" },
  { name: "Zurich", logo: "/aseguradoras/zurich.svg" },
];

const scrollingLogos = [...compañias, ...compañias];
---

<div class="container mx-auto px-6 mb-8">
  <div class="flex flex-col items-center">
    <div class="mb-14 w-full max-w-4xl" data-aos="fade-up">
      <p
        class="text-center text-blue-600 font-bold tracking-[0.3em] uppercase text-[16px] mb-8"
      >
        Acreditación y Respaldo
      </p>

      <div
        class="relative bg-slate-50 border border-slate-200 rounded-3xl p-8 md:p-10 shadow-sm overflow-hidden"
      >
        <div
          class="absolute -top-24 -right-24 w-64 h-64 bg-blue-100/30 rounded-full blur-3xl"
        >
        </div>

        <div
          class="relative flex flex-col md:flex-row items-center gap-8 md:gap-12"
        >
          <div class="flex-shrink-0">
            <div
              class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 group-hover:shadow-md transition-shadow"
            >
              <img
                src="/aseguradoras/cmf9.png"
                alt="Registro CMF"
                class="h-20 md:h-24 w-auto object-contain"
              />
            </div>
          </div>

          <div class="flex-grow text-center md:text-left">
            <div
              class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-[10px] font-bold uppercase tracking-wider rounded-full mb-3"
            >
              Entidad Regulada
            </div>
            <h3 class="text-slate-900 font-extrabold text-xl md:text-2xl mb-2">
              Corredor Autorizado CMF
            </h3>
            <p class="text-slate-500 text-sm leading-relaxed mb-6 max-w-xl">
              Andes Protección se encuentra inscrita en el Registro de
              Corredores de Seguros que lleva la <span
                class="text-slate-800 font-semibold"
                >Comisión para el Mercado Financiero</span
              > bajo el <span class="text-blue-600 font-bold">N°10067</span>.
            </p>

            <div
              class="flex items-center justify-center md:justify-start gap-4 pt-6 border-t border-slate-200"
            >
              <img
                src="/aseguradoras/ans.png"
                alt="Miembro ANS"
                class="h-10 w-auto hover:scale-110 transition duration-300"
              />
              <div class="text-left">
                <p
                  class="text-slate-700 font-bold text-[11px] uppercase tracking-tight leading-none"
                >
                  Miembro Activo ANS
                </p>
                <p class="text-slate-400 text-[10px] leading-tight">
                  Asociación Nacional de Corredores de Seguros
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="w-full text-center" data-aos="fade-up">
      <div class="w-12 h-0.5 bg-blue-200 mx-auto mb-8"></div>
      <p
        class="text-slate-400 font-bold uppercase tracking-[0.2em] text-14px] mb-2"
      >
        Alianzas con las mejores compañías
      </p>
    </div>
  </div>
</div>

<div class="relative flex overflow-hidden">
  <div class="flex animate-marquee whitespace-nowrap items-center py-2">
    {
      scrollingLogos.map((cia) => (
        <div class="flex items-center justify-center mx-4 md:mx-6 flex-shrink-0">
          <img
            src={cia.logo}
            alt={cia.name}
            title={cia.name}
            class="h-8 md:h-12 w-auto max-w-[140px] md:max-w-[180px] object-contain hover:scale-110 transition duration-300"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    display: flex;
    width: max-content;
    animation: marquee 40s linear infinite;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>
