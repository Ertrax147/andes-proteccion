---
// src/components/Navbar.astro
---

<nav
  class="fixed w-full z-50 bg-white/95 backdrop-blur-sm shadow-md transition-all"
>
  <div class="w-full px-6 py-2 flex items-center justify-between">
    <a href="/" class="flex items-center gap-4">
      <img
        src="/logo/Logo-Andes-ProteccionV2.png"
        alt="Isotipo de Andes Protección"
        class="h-14 w-auto object-contain"
      />
    </a>

    <div
      class="hidden md:flex space-x-8 text-sm font-bold text-slate-600 items-center"
    >
      <a href="/#inicio" class="nav-link transition uppercase">Inicio</a>
      <a href="/#productos" class="nav-link transition uppercase">Productos</a>
      <a href="/#nosotros" class="nav-link transition uppercase"
        >Quiénes Somos</a
      >

      <a
        href="https://wa.me/56998858923?text=Hola,%20quisiera%20más%20información%20sobre%20sus%20seguros"
        class="bg-blue-600 text-white px-6 py-2.5 rounded-full hover:bg-blue-700 transition shadow-lg shadow-blue-600/20"
      >
        COTIZAR
      </a>
    </div>

    <div class="md:hidden flex items-center">
      <button
        id="mobile-menu-btn"
        class="text-slate-900 focus:outline-none p-2"
      >
        <svg
          id="icon-open"
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path></svg
        >
        <svg
          id="icon-close"
          class="w-8 h-8 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path></svg
        >
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-t border-slate-100 absolute w-full shadow-xl"
  >
    <div class="flex flex-col px-6 py-4 space-y-4">
      <a
        href="/#inicio"
        class="text-slate-600 font-bold hover:text-blue-600 py-2 mobile-link"
        >INICIO</a
      >
      <a
        href="/#productos"
        class="text-slate-600 font-bold hover:text-blue-600 py-2 mobile-link"
        >PRODUCTOS</a
      >
      <a
        href="/#nosotros"
        class="text-slate-600 font-bold hover:text-blue-600 py-2 mobile-link"
        >QUIÉNES SOMOS</a
      >
      <a
        href="/#contacto"
        class="bg-blue-600 text-white text-center font-bold py-3 rounded-lg mobile-link"
        >COTIZAR AHORA</a
      >
    </div>
  </div>
</nav>

<style>
  /* Estilo base para los links */
  .nav-link {
    position: relative;
    color: #475569; /* slate-600 */
    text-decoration: none;
    padding: 4px 0;
  }

  /* Cambio de color en hover */
  .nav-link:hover {
    color: #2563eb; /* blue-600 */
  }

  /* Crear la línea debajo del texto */
  .nav-link::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #2563eb; /* Color de la línea (blue-600) */
    transform: scaleX(0); /* Empezar con escala 0 (invisible) */
    transform-origin: center; /* Punto de origen en el centro */
    transition: transform 0.3s ease-out; /* Animación suave */
  }

  /* Efecto al pasar el mouse: Escalar a 1 (ancho completo) */
  .nav-link:hover::after {
    transform: scaleX(1);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const iconOpen = document.getElementById("icon-open");
    const iconClose = document.getElementById("icon-close");
    const mobileLinks = document.querySelectorAll(".mobile-link");

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
      iconOpen.classList.toggle("hidden");
      iconClose.classList.toggle("hidden");
    });

    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
      });
    });
  });
</script>
